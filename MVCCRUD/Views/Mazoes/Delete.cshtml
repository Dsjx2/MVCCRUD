@model MVCCRUD.Models.Mazo

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Realmente quieres eliminar este mazo?</h3>
<div>
    <h4>Mazo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            Nombre del Mazo
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.MazoNombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdMazo" />
        <input type="submit" value="Eliminar" class="btn btn-warning" />
        <div class="d-flex justify-content-end">
        <a asp-action="Index" class="btn btn-danger">Regresar<i class="bi bi-arrow-return-left"></i></a>
        </div>
    </form>
</div>
