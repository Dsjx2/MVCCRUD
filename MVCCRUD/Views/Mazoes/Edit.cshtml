@model MVCCRUD.Models.Mazo

@{
    ViewData["Title"] = "Edit";
}

<h1>Actualizar</h1>

<h4>Mazo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMazo" />
            <div class="form-group">
                <label asp-for="MazoNombre" class="control-label">Nombre del Mazo</label>
                <input asp-for="MazoNombre" class="form-control" />
                <span asp-validation-for="MazoNombre" class="text-danger"></span>
            </div>
            <p>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-end">
    <a asp-action="Index" class="btn btn-danger">Regresar<i class="bi bi-arrow-return-left"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
