@model MVCCRUD.Models.Carta

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Realmente quieres eliminar esta carta?</h3>
<div>
    <h4>Carta</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoCarta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoCarta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCarta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCarta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PoderAtaque)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PoderAtaque)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PoderDefensa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PoderDefensa)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCarta" />
        <input type="submit" value="Eliminar" class="btn btn-warning" />
        <div class="d-flex justify-content-end">
            <a asp-action="Index" class="btn btn-danger">Regresar<i class="bi bi-arrow-return-left"></i></a>
        </div>
    </form>
</div>
