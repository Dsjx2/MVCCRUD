@model MVCCRUD.Models.Carta

@{
    ViewData["Title"] = "Edit";
}

<h1>Actualizar Información</h1>

<h4>Carta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCarta" />
            <div class="form-group">
                <label asp-for="TipoCarta" class="control-label">Tipo</label>
                <input asp-for="TipoCarta" class="form-control" />
                <span asp-validation-for="TipoCarta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCarta" class="control-label">Nombre</label>
                <input asp-for="NombreCarta" class="form-control" />
                <span asp-validation-for="NombreCarta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoderAtaque" class="control-label">Ataque</label>
                <input asp-for="PoderAtaque" class="form-control" />
                <span asp-validation-for="PoderAtaque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PoderDefensa" class="control-label">Defensa</label>
                <input asp-for="PoderDefensa" class="form-control" />
                <span asp-validation-for="PoderDefensa" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-end">
    <a asp-action="Index" class="btn btn-danger">Regresar<i class="bi bi-arrow-return-left"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
